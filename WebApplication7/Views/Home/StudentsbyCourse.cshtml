@model IEnumerable<Student>
@{
    ViewData["Title"] = "Students by course";
}
<div>
     @{
          if (Model.Count()==0){
                      <div>aucun etudiant n'est affecté à ce cours </div>
          }
          else {
        <hr />
    
        foreach (Student s in Model)
        {
                <dl class="row">
                    <dt class="col-sm-2">
                        id
                    </dt>
                    <dd class="col-sm-10">
                        @s.id
                    </dd>
                    <dt class="col-sm-2">
                        first_name
                    </dt>
                    <dd class="col-sm-10">
                        @s.first_name
                    </dd>
                    <dt class="col-sm-2">
                        last_name
                    </dt>
                    <dd class="col-sm-10">
                        @s.last_name
                    </dd>
                    <dt class="col-sm-2">
                        phone_number
                    </dt>
                    <dd class="col-sm-10">
                        @s.phone_number
                    </dd>
                    <dt class="col-sm-2">
                        university
                    </dt>
                    <dd class="col-sm-10">
                        @s.university
                    </dd>
                    <dt class="col-sm-2">
                        course
                    </dt>
                    <dd class="col-sm-10">
                        @s.course
                    </dd>
                </dl>
        }
    }
    }

</div>